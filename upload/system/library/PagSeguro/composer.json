    "require": {
        "php": "^7.3 | ^8.0",
        "curl/curl": "^2.3",
        "ext-curl": "*",
        "ext-json": "*",
        "monolog/monolog": "^2.1"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.5",
        "phpunit/phpunit": "^9.3"
    },
    "authors": [
        {
            "name": "Valdeir S.",
            "email": "valdeir.naval@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
          "ValdeirPsr\\PagSeguro\\": "src/",
